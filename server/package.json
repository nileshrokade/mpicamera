{
  "main": "dist/index.js",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "tslint": "^6.1.3",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "yarn build",
    "start": "nodemon .",
    "dev": "concurrently --kill-others \"yarn watch\" \"yarn start\""
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  }
}
